<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUIZ_NAME"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView_label_name"
        app:layout_constraintTop_toBottomOf="@+id/tv_quiz_id" />

    <TextView
        android:id="@+id/tv_quiz_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUIZ_CREATOR"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView_label_creator"
        app:layout_constraintTop_toTopOf="@+id/textView_label_creator" />

    <TextView
        android:id="@+id/tv_quiz_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUIZ_ID"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/textView_label_id"
        app:layout_constraintTop_toTopOf="@+id/textView_label_id" />

    <TextView
        android:id="@+id/textView_label_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="#"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_label_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Название: "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView_label_id"
        app:layout_constraintTop_toBottomOf="@+id/textView_label_id" />

    <TextView
        android:id="@+id/textView_label_creator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Создал: "
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/textView_label_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_label_name" />

</androidx.constraintlayout.widget.ConstraintLayout>